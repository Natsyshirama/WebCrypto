    </servlet>
    
    <servlet-mapping>
        <servlet-name>InsertRetraitServlet</servlet-name>
        <url-pattern>/fond/insertRetrait</url-pattern>
    </servlet-mapping>
<servlet-mapping>
        <servlet-name>InsertRetraitServlet</servlet-name>
