        <servlet-class>controller.cryptoController.CoursHistoriqueServlet</servlet-class>
    </servlet>

    <!-- Mapping de la servlet -->
    <servlet-mapping>
        <servlet-name>CoursHistoriqueServlet</servlet-name>
