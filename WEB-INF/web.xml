    <servlet-mapping>
        <servlet-name>RetraitServlet</servlet-name>
        <url-pattern>/fond/valideRetrait</url-pattern>
    </servlet-mapping>


 <servlet>
        <servlet-name>DepotServlet</servlet-name>
