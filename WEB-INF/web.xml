</servlet>
<servlet-mapping>
        <servlet-name>ProfilServlet</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>

<welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

<session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>